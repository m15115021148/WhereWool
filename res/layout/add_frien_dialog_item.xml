<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lan"
        android:gravity="center"
        android:padding="@dimen/_20px_in720p"
        android:text="温馨提示"
        android:textColor="#ffffff"
        android:textSize="@dimen/_40px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_30px_in720p" >

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/_15px_in720p"
            android:textColor="#777777"
            android:textSize="@dimen/_32px_in720p" />


        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50px_in720p"
            android:layout_marginTop="@dimen/_10px_in720p"
            android:lineSpacingExtra="@dimen/_15px_in720p"
            android:textColor="#777777"
            android:textSize="@dimen/_28px_in720p"
            android:visibility="gone" />
       
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10px_in720p"
            android:lineSpacingExtra="@dimen/_15px_in720p"
            android:textColor="#777777"
            android:textSize="@dimen/_32px_in720p"
            android:visibility="gone" />
        
    </LinearLayout>

</LinearLayout>