<?xml version="1.0" encoding="utf-8"?>
<!-- 修改密码页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huia"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/white"
        android:padding="@dimen/_15px_in720p" >

        <LinearLayout
            android:id="@+id/base_back_lay"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="@dimen/_32px_in720p"
                android:layout_height="@dimen/_32px_in720p"
                android:layout_marginLeft="@dimen/_10px_in720p"
                android:background="@drawable/my_03" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="@color/ghei"
            android:textSize="@dimen/_36px_in720p" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="center"
            android:text="原始密码："
            android:textColor="@color/ghui"
            android:textSize="@dimen/_30px_in720p" />

        <EditText
            android:id="@+id/changepwd_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入原始密码"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="center"
            android:text="新设密码："
            android:textColor="@color/ghui"
            android:textSize="@dimen/_30px_in720p" />

        <EditText
            android:id="@+id/changepwd_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入新设密码"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="center"
            android:text="确认密码："
            android:textColor="@color/ghui"
            android:textSize="@dimen/_30px_in720p" />

        <EditText
            android:id="@+id/changepwd_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入确认密码"
            android:inputType="textPassword"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/changepwd_sub"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_marginBottom="@dimen/_40px_in720p"
            android:layout_marginLeft="@dimen/_30px_in720p"
            android:layout_marginRight="@dimen/_30px_in720p"
            android:layout_marginTop="@dimen/_40px_in720p"
            android:background="@drawable/bg_blue"
            android:gravity="center"
            android:paddingLeft="@dimen/_40px_in720p"
            android:paddingRight="@dimen/_40px_in720p"
            android:text="提交修改"
            android:textColor="#ffffff"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

</LinearLayout>