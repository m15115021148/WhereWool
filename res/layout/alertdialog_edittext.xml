<?xml version="1.0" encoding="utf-8"?>
<!-- 修改备注dialog样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="修改备注"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:textSize="@dimen/_35px_in720p" />

    <TextView
        android:id="@+id/old_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="修改备注"
        android:layout_marginTop="@dimen/_10px_in720p"
        android:textColor="#ff0000"
        android:textSize="@dimen/_28px_in720p" />

    <EditText
        android:id="@+id/change_name_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:hint="请输入备注（最多不超过5个字）"
        android:maxLength="5"
        android:textColorHint="#dedede"
        android:textColor="#333333"
        android:textSize="@dimen/_30px_in720p" />

</LinearLayout>