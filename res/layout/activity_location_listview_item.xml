<?xml version="1.0" encoding="utf-8"?>
<!-- 定位记录列表每一列样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:background="@color/white" >

        <TextView
            android:id="@+id/location_listview_img"
            android:layout_width="@dimen/_60px_in720p"
            android:layout_height="@dimen/_60px_in720p"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/listimga" />

        <TextView
            android:id="@+id/location_listview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_toRightOf="@+id/location_listview_img"
            android:gravity="center_vertical"
            android:text="@string/user_xfjl"
             android:textColor="#333333"
                            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/location_listview_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/location_listview_name"
            android:text="15788817811"
             android:textColor="#333333"
                            android:textSize="@dimen/_24px_in720p" />

        <TextView
            android:id="@+id/location_listview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_40px_in720p"
            android:layout_toLeftOf="@+id/location_listview_go"
            android:text="15788817811"
             android:textColor="#cccccc"
                            android:textSize="@dimen/_24px_in720p" />

        <ImageView
            android:id="@+id/location_listview_go"
            android:layout_width="@dimen/_35px_in720p"
            android:layout_height="@dimen/_35px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:background="@drawable/my_34" />
    </RelativeLayout>

</LinearLayout>