<?xml version="1.0" encoding="utf-8"?>
<!-- 号码管理列表每一列 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/friend_item_img"
        android:layout_width="@dimen/_90px_in720p"
        android:layout_height="@dimen/_90px_in720p"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/_20px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/listimga" />

    <TextView
        android:id="@+id/friend_item_show"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_17px_in720p"
        android:layout_marginTop="@dimen/_10px_in720p"
        android:gravity="center"
        android:text="我是五个字"
        android:textColor="#333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/friend_item_open_type"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_marginTop="@dimen/_10px_in720p"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="已开通"
            android:textColor="@color/lv"
            android:textSize="@dimen/_30px_in720p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/friend_item_time"
                    android:layout_width="1px"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10px_in720p"
                    android:layout_marginLeft="@dimen/_20px_in720p"
                    android:layout_weight="1"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/_24px_in720p" />

                <TextView
                    android:id="@+id/friend_item_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_horizontal"
                    android:layout_marginBottom="@dimen/_10px_in720p"
                    android:layout_marginRight="@dimen/_20px_in720p"
                    android:layout_weight="1.2"
                    android:gravity="right|center"
                    android:textColor="#cccccc"
                    android:textSize="@dimen/_24px_in720p" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>