<?xml version="1.0" encoding="utf-8"?>
<!-- 地图标记样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_560px_in720p"
    android:layout_height="wrap_content"
    android:background="@drawable/location_bg"
    android:orientation="vertical" >
      <TextView
        android:id="@+id/location_address"
        android:layout_width="@dimen/_560px_in720p"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_20px_in720p"
        android:paddingRight="@dimen/_20px_in720p"
        android:gravity="center_vertical"
       android:layout_marginTop="@dimen/_10px_in720p"
        android:textColor="#333333"
        android:textSize="@dimen/_30px_in720p"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />
    <TextView 
        android:id="@+id/location_time"
         android:layout_width="@dimen/_560px_in720p"
    android:layout_height="wrap_content"
    android:paddingRight="@dimen/_20px_in720p"
     android:paddingLeft="@dimen/_20px_in720p"
    android:gravity="right|center_vertical"
     android:paddingBottom="@dimen/_40px_in720p"
    android:textColor="#cccccc"
    android:textSize="@dimen/_24px_in720p"
    android:text="2015-12-10"
        />

  

</LinearLayout>
