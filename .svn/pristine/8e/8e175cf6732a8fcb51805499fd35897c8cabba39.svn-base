    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_margin="@dimen/_30px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical"
        android:padding="@dimen/_15px_in720p" >

        <ImageView
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p"
            android:layout_marginRight="@dimen/_5px_in720p"
            android:src="@drawable/login_pwd" />

        <EditText
            android:id="@+id/register_email_pwd_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入您的新密码"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p"
            android:inputType="textPassword"
            android:textColor="#333333"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_margin="@dimen/_30px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical"
        android:padding="@dimen/_15px_in720p" >

        <ImageView
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p"
            android:layout_marginRight="@dimen/_5px_in720p"
            android:src="@drawable/login_pwd" />

        <EditText
            android:id="@+id/register_email_repwd_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="textPassword"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p"
            android:hint="请再次输入您的新密码"
            android:textColor="#333333"
             />
    </LinearLayout>

    <TextView
        android:id="@+id/register_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:layout_marginRight="@dimen/_20px_in720p"
        android:layout_marginTop="@dimen/_80px_in720p"
        android:background="@drawable/findsub"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="@dimen/_30px_in720p" />
