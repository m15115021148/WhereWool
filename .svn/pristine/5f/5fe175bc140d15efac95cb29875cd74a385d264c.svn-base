<?xml version="1.0" encoding="utf-8"?>
<!-- 地图标记样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/_400px_in720p"
        android:layout_height="wrap_content"
        android:background="@drawable/index_location_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/location_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10px_in720p"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:paddingLeft="@dimen/_20px_in720p"
            android:paddingRight="@dimen/_20px_in720p"
            android:text="XXXXXXXXXXddddddddddddddddddddddddXX"
            android:textColor="#333333"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/location_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/_10px_in720p"
            android:paddingLeft="@dimen/_20px_in720p"
            android:paddingTop="@dimen/_10px_in720p"
            android:text="2015-12-10"
            android:textColor="#cccccc"
            android:textSize="@dimen/_26px_in720p" />
    </LinearLayout>

</LinearLayout>