<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gbei"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/_20px_in720p" >
    
    <TextView
        android:id="@+id/msg_time"
        android:background="@drawable/xx_03"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:layout_marginBottom="@dimen/_40px_in720p"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:text="2017-33-33 11:33"
        android:textSize="@dimen/_35px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_77px_in720p"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/msg_img"
                android:layout_width="@dimen/_30px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:background="@drawable/xx_07" />

            <TextView
                android:id="@+id/msg_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="系统消息"
                android:textSize="@dimen/_35px_in720p" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_3px_in720p"
            android:background="@color/gbei" />

        <TextView
            android:id="@+id/msg_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20px_in720p"
            android:gravity="center_vertical"
            android:text="dddddddd" />
    </LinearLayout>

</LinearLayout>