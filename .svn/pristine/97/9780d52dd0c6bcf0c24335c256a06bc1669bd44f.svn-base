<?xml version="1.0" encoding="utf-8"?>
<!-- 对话框listview的每一项样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/popup_bg"
    android:orientation="horizontal" >

    <TextView 
        android:id="@+id/popup_list_img"
        android:layout_width="@dimen/_70px_in720p"
        android:layout_height="@dimen/_70px_in720p"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:drawablePadding="5dp"
        android:layout_marginRight="@dimen/_20px_in720p"
        />
    
       <TextView 
        android:id="@+id/popup_list_show"
        android:layout_width="@dimen/_200px_in720p"
        android:layout_height="@dimen/_90px_in720p"
        android:textSize="@dimen/_30px_in720p"
        android:textColor="#535c67"
        android:text="我是五个字"
        android:gravity="center_vertical"
         android:layout_marginRight="10dp"
        />
       <LinearLayout 
            android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right|center"
           >
             <TextView 
        android:id="@+id/popup_list_sel"
        android:layout_width="@dimen/_29px_in720p"
        android:layout_height="@dimen/_34px_in720p"
        android:background="@drawable/sel"
       android:visibility="gone"
         android:layout_marginRight="@dimen/_30px_in720p"
        />
       </LinearLayout>
    

</LinearLayout>
