<?xml version="1.0" encoding="utf-8"?>
<!-- 意见和反馈页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huia"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/white"
        android:padding="@dimen/_15px_in720p" >

        <LinearLayout
            android:id="@+id/base_back_lay"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="@dimen/_32px_in720p"
                android:layout_height="@dimen/_32px_in720p"
                android:layout_marginLeft="@dimen/_10px_in720p"
                android:background="@drawable/my_03" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="用户反馈"
            android:textColor="@color/ghei"
            android:textSize="@dimen/_36px_in720p" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginBottom="@dimen/_20px_in720p"
        android:background="@color/user_login_bottom_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/yijian_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="意见或问题标题（15字以内）"
            android:maxLength="15"
            android:paddingLeft="@dimen/_20px_in720p"
            android:paddingRight="@dimen/_20px_in720p"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/yijian_context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:enabled="true"
            android:gravity="top"
            android:hint="请描述您的意见或问题(200字以内)"
            android:inputType="textMultiLine"
            android:maxLength="200"
            android:minLines="8"
            android:padding="@dimen/_20px_in720p"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginBottom="@dimen/_2px_in720p"
        android:background="@color/user_login_bottom_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_20px_in720p"
        android:gravity="center_vertical"
        android:text="(选填)提供问题截图"
        android:textColor="#777777"
        android:textSize="@dimen/_30px_in720p" />

    <LinearLayout
        android:id="@+id/yijian_pic_lay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical" >

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/pic1"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:visibility="gone" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/pic2"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:visibility="gone" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/pic3"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:visibility="gone" />

        <TextView
            android:id="@+id/add_pic"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:background="@drawable/addpic" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2px_in720p"
        android:layout_marginBottom="@dimen/_2px_in720p"
        android:background="@color/user_login_bottom_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical" >

        <EditText
            android:id="@+id/yijian_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="（选填）请留下您的邮箱/手机/QQ号"
            android:maxLength="20"
            android:paddingLeft="@dimen/_20px_in720p"
            android:paddingRight="@dimen/_20px_in720p"
            android:textColor="#333333"
            android:textColorHint="#dedede"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <TextView
        android:id="@+id/yijian_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_80px_in720p"
        android:background="@drawable/bg_blue"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="@dimen/_30px_in720p" />

</LinearLayout>