<?xml version="1.0" encoding="utf-8"?>
<!-- 充值记录每一列 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px_in720p"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recharge_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10px_in720p"
                android:layout_marginTop="@dimen/_20px_in720p"
                android:layout_weight="1"
                android:text="2012-12-12 12:12:12"
                android:textColor="#333333"
                            android:textSize="@dimen/_30px_in720p" />

            <TextView
                android:id="@+id/recharge_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_40px_in720p"
                android:layout_marginTop="@dimen/_20px_in720p"
                android:layout_weight="2.5"
                android:gravity="center|right"
                android:text="充值成功"
                 android:textColor="#cccccc"
                            android:textSize="@dimen/_24px_in720p" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

           <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/recharge_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_40px_in720p"
                android:layout_marginTop="@dimen/_20px_in720p"
                android:layout_marginBottom="@dimen/_20px_in720p"
                android:layout_weight="2.5"
                android:text="充值金额"
                 android:textColor="#cccccc"
                            android:textSize="@dimen/_24px_in720p" />

            <TextView
                android:id="@+id/recharge_show_xiangqing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_40px_in720p"
                android:layout_marginTop="@dimen/_20px_in720p"
                android:layout_marginBottom="@dimen/_20px_in720p"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="￥100"
                android:textColor="@color/huang"
                            android:textSize="@dimen/_30px_in720p" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>