<?xml version="1.0" encoding="utf-8"?>
<!-- 添加好友页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huia"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/lan"
        android:padding="@dimen/_15px_in720p" >

        <LinearLayout
            android:id="@+id/base_back_lay"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="@dimen/_20px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:layout_marginLeft="@dimen/_10px_in720p"
                android:background="@drawable/back_index" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="添加号码"
            android:textColor="@color/white"
            android:textSize="@dimen/_36px_in720p" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_30px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical"
        android:padding="@dimen/_15px_in720p" >

        <ImageView
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p"
            android:layout_marginRight="@dimen/_5px_in720p"
            android:src="@drawable/addfriend_phone"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/addfriend_num_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入需定位的号码"
            android:inputType="phone"
            android:textColor="#333333"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_30px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical"
        android:padding="@dimen/_15px_in720p" >

        <ImageView
            tools:ignore="ContentDescription"
            android:layout_width="@dimen/_30px_in720p"
            android:layout_height="@dimen/_30px_in720p"
            android:layout_marginRight="@dimen/_5px_in720p"
            android:src="@drawable/login_username" />

        <EditText
            android:id="@+id/addfriend_name_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="请输入要显示的名称(最多5个字)"
            android:maxLength="5"
            android:textColor="#333333"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_30px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical"
        android:padding="@dimen/_15px_in720p" >

        <Spinner
            android:id="@+id/addfriend_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/typebg"
            android:textColor="#333333"
            android:textSize="@dimen/_30px_in720p" />
    </LinearLayout>
    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_30px_in720p"
        android:background="@drawable/login_shape"
        android:gravity="center_vertical"
        android:padding="@dimen/_15px_in720p" >


        <EditText
            android:id="@+id/addfriend_miaoshu_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="@string/addfriend_miaoshu"
            android:textColor="@color/user_login_edit_font_color"
            android:textSize="@dimen/login_font_14" />
    </LinearLayout>    -->

    <TextView
        android:id="@+id/addfriend_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_marginLeft="@dimen/_55px_in720p"
        android:layout_marginRight="@dimen/_55px_in720p"
        android:layout_marginTop="@dimen/_80px_in720p"
        android:background="@drawable/recharge_sub"
        android:gravity="center"
        android:text="@string/addfriend_sub"
        android:textColor="#ffffff"
        android:textSize="@dimen/_35px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30px_in720p"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_52px_in720p"
            android:layout_marginRight="@dimen/_52px_in720p"
            android:gravity="center_vertical"
            android:text="@string/addfriend_tishi"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/_22px_in720p" />
    </LinearLayout>

</LinearLayout>