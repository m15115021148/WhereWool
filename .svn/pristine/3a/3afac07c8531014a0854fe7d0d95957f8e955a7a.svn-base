<?xml version="1.0" encoding="utf-8"?>
<!-- 那儿呢登录 布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:background="@drawable/login_head" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30px_in720p"
            android:gravity="center"
            android:text="@string/pager_login_title"
            android:textColor="@color/white"
            android:textSize="@dimen/_36px_in720p" />

        <LinearLayout
            android:id="@+id/base_back_lay"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/textView1" >

            <TextView
                android:id="@+id/login_back_tv"
                android:layout_width="@dimen/_20px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:layout_marginLeft="@dimen/_30px_in720p"
                android:layout_marginTop="@dimen/_10px_in720p"
                android:background="@drawable/back_index" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/user_login_bottom_color"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_30px_in720p"
            android:background="@drawable/login_shape"
            android:gravity="center_vertical"
            android:padding="@dimen/_15px_in720p" >

            <ImageView
                android:layout_width="@dimen/_30px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:layout_marginRight="@dimen/_5px_in720p"
                android:src="@drawable/login_username"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/user_name_ed"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="请输入电话号码"
                android:textColor="#333333"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textSize="@dimen/_30px_in720p" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_30px_in720p"
            android:background="@drawable/login_shape"
            android:gravity="center_vertical"
            android:padding="@dimen/_15px_in720p" >

            <ImageView
                android:layout_width="@dimen/_30px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:layout_marginRight="@dimen/_5px_in720p"
                android:src="@drawable/login_pwd" 
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/pwd_ed"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:hint="@string/login_user_pwd"
                android:inputType="textPassword"
                android:textColor="#333333"
                android:textSize="@dimen/_30px_in720p" />
        </LinearLayout>
        <TextView
            android:id="@+id/login_user_findpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/_30px_in720p"
            android:lineSpacingExtra="@dimen/_3px_in720p"
            android:text="找回密码"
            android:textColor="@color/lan"
            android:textSize="@dimen/_30px_in720p" />

        <LinearLayout
            android:id="@+id/user_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_30px_in720p"
            android:background="@drawable/login_shape2"
            android:clickable="true"
            android:gravity="center_vertical"
            android:padding="@dimen/_15px_in720p" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:gravity="center"
                android:text="@string/pager_login_title"
                android:textColor="@color/white"
                android:textSize="@dimen/_30px_in720p" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_25px_in720p"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/_3px_in720p"
                android:text="@string/login_user_content"
                android:textColor="#333333"
                android:textSize="@dimen/_30px_in720p" />

            <TextView
                android:id="@+id/login_user_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/_3px_in720p"
                android:text="@string/login_user_register"
                android:textColor="@color/lan"
                android:textSize="@dimen/_30px_in720p" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>