<?xml version="1.0" encoding="utf-8"?>
<!-- 计费账单列表每一列 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
       <TextView
            android:id="@+id/bill_item_img"
            android:layout_width="@dimen/_60px_in720p"
            android:layout_height="@dimen/_60px_in720p"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginTop="@dimen/_20px_in720p"
            android:layout_marginBottom="@dimen/_20px_in720p"
            android:layout_gravity="center_vertical"
            android:background="@drawable/listimga" />
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

     

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/bill_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20px_in720p"
                    android:layout_marginTop="@dimen/_10px_in720p"
                    android:text="老王"
                    android:textColor="#333333"
                            android:textSize="@dimen/_30px_in720p" />

                <TextView
                    android:id="@+id/bill_item_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20px_in720p"
                    android:layout_marginTop="@dimen/_10px_in720p"
                    android:text="15788817811"
                    android:textColor="#333333"
                            android:textSize="@dimen/_24px_in720p"/>
            </LinearLayout>

            <TextView
                android:id="@+id/bill_item_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:layout_marginTop="@dimen/_10px_in720p"
                android:layout_weight="3"
                android:gravity="right|center"
                android:text="￥ 35"
                android:layout_gravity="right|center"
                android:textColor="@color/huang"
                            android:textSize="@dimen/_30px_in720p" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bill_item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:layout_marginBottom="@dimen/_10px_in720p"
                android:layout_weight="1"
                android:text="2012-12-12 12:12:12"
               android:textColor="#cccccc"
                            android:textSize="@dimen/_24px_in720p" />

            <TextView
                android:id="@+id/bill_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:layout_marginBottom="@dimen/_10px_in720p"
                android:layout_weight="2.5"
                android:gravity="right|center"
                android:text="按月计费"
                android:layout_gravity="right|center_horizontal"
                android:textColor="#cccccc"
                            android:textSize="@dimen/_24px_in720p" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>