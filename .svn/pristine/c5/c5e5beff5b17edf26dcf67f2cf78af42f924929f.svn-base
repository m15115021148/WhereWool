<?xml version="1.0" encoding="utf-8"?>
<!-- 公告dialog样式 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
    
      <TextView 
                android:id="@+id/gonggaobg"
		     android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7f000000"
		    ></TextView>

<LinearLayout 
    android:layout_width="@dimen/_550px_in720p"
    android:layout_height="@dimen/_550px_in720p"
    android:background="@drawable/dc_02"
    android:layout_centerInParent="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120px_in720p" >

        <ImageView
             android:id="@+id/gonggao_img"
            android:layout_width="@dimen/_64px_in720p"
            android:layout_height="@dimen/_64px_in720p"
            android:layout_centerInParent="true"
            android:background="@drawable/lb_03" />

        <TextView
           android:id="@+id/gonggao_close"
            android:layout_width="@dimen/_32px_in720p"
            android:layout_height="@dimen/_32px_in720p"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:layout_marginTop="@dimen/_20px_in720p"
            android:background="@drawable/wd_03" />
    </RelativeLayout>

    <TextView
        android:id="@+id/gonggao_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60px_in720p"
        android:gravity="center"
        android:text="系统消息"
        android:textColor="#333333"
        android:textSize="@dimen/_36px_in720p" />

    <TextView
        android:id="@+id/brief"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180px_in720p"
        android:layout_marginLeft="@dimen/_100px_in720p"
        android:layout_marginRight="@dimen/_100px_in720p"
        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
        android:textColor="#333333"
        android:textSize="@dimen/_28px_in720p" />

    <TextView
        android:id="@+id/zhidao"
        android:layout_width="@dimen/_400px_in720p"
        android:layout_height="@dimen/_80px_in720p"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/zdl_26"
        android:gravity="center"
        android:text="知道了"
        android:textColor="#ffffff"
        android:textSize="@dimen/_28px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_40px_in720p"
            android:gravity="bottom|center"
            android:text="详情请在首页右上角消息列表中查看"
            android:textColor="@color/ghui"
            android:textSize="@dimen/_28px_in720p" />
    </LinearLayout>

</LinearLayout>
</RelativeLayout>