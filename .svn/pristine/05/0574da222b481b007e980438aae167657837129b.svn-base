<?xml version="1.0" encoding="utf-8"?>
<!-- 更改好友套餐dialog样式 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_500px_in720p"
    android:layout_height="@dimen/_600px_in720p"
    android:background="#ffffff"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="match_parent"
        android:layout_height="@dimen/_60px_in720p"
        android:gravity="right|center_vertical"
    >
    <TextView 
        android:id="@+id/change_close"
           android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5px_in720p"
        android:layout_marginRight="@dimen/_15px_in720p"
        android:background="@drawable/change_x"
        />
</LinearLayout>
    <RadioGroup
        android:id="@+id/change_rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_340px_in720p"
        android:gravity="center" >


            <RadioButton
                android:id="@+id/change_zhou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                 android:textSize="@dimen/_30px_in720p"
                 android:layout_marginRight="@dimen/_20px_in720p"
                 android:textColor="#333333"
                 android:text="按周计费" />


            <RadioButton
                android:id="@+id/change_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/_30px_in720p"
                 android:layout_marginRight="@dimen/_20px_in720p"
                android:textSize="@dimen/_30px_in720p"
                android:textColor="#333333"
                 android:text="按月计费"  />


            <RadioButton
                android:id="@+id/change_nian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_30px_in720p"
                android:textColor="#333333"
                android:layout_marginTop="@dimen/_30px_in720p"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:text="按年计费" />

    </RadioGroup>
<LinearLayout 
    android:layout_width="match_parent"
        android:layout_height="@dimen/_200px_in720p"
        android:gravity="center"
    >
    <TextView 
        android:id="@+id/change_sub"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60px_in720p"
        android:layout_marginLeft="@dimen/_50px_in720p"
        android:layout_marginRight="@dimen/_50px_in720p"
        android:background="@drawable/recharge_sub"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="@dimen/_30px_in720p"
        android:text="确    定"
        />
</LinearLayout>
</LinearLayout>