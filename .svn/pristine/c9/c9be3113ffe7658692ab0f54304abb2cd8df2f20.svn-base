<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gbei"
    android:orientation="vertical"
    android:padding="@dimen/_20px_in720p" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_77px_in720p"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/_30px_in720p"
                android:layout_height="@dimen/_30px_in720p"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:background="@drawable/xx_07" />
              <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_20px_in720p"
                android:layout_marginLeft="@dimen/_20px_in720p"
                android:gravity="center_vertical"
                android:text="系统消息" />
        </LinearLayout>
        <View 
               android:layout_width="match_parent"
            android:layout_height="@dimen/_3px_in720p"
            android:background="@color/gbei"
            />
         <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20px_in720p"
                android:gravity="center_vertical"
                android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />
    </LinearLayout>

</RelativeLayout>