<?xml version="1.0" encoding="utf-8"?>
<!-- 申请退款页面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huia"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80px_in720p"
        android:background="@color/white"
        android:padding="@dimen/_15px_in720p" >

        <LinearLayout
            android:id="@+id/base_back_lay"
            android:layout_width="@dimen/_80px_in720p"
            android:layout_height="@dimen/_80px_in720p"
            android:layout_centerVertical="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/back_tv"
                android:layout_width="@dimen/_32px_in720p"
                android:layout_height="@dimen/_32px_in720p"
                android:layout_marginLeft="@dimen/_10px_in720p"
                android:background="@drawable/my_03" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/refund_title"
            android:textColor="@color/ghei"
            android:textSize="@dimen/_36px_in720p" />
<!--  
        <TextView
            android:id="@+id/refund_old"
            android:layout_width="@dimen/_40px_in720p"
            android:layout_height="@dimen/_40px_in720p"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_10px_in720p"
            android:background="@drawable/recharge_old"
            android:textSize="18sp" />
            -->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20px_in720p"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/refund_yue"
            android:textColor="#333333"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/refund_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/lan" 
            android:textSize="@dimen/_30px_in720p"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="元" 
            android:textColor="#333333"
            android:textSize="@dimen/_30px_in720p"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="center"
            android:text="申请服务"
            android:textColor="#cccccc" 
            android:textSize="@dimen/_30px_in720p"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/_30px_in720p"
            android:text="退款" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="center"
            android:text="退款原因"
            android:textColor="#cccccc"
            android:textSize="@dimen/_30px_in720p" />

        <TextView
            android:id="@+id/refund_yuanyin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20px_in720p"
            android:layout_marginRight="@dimen/_20px_in720p"
            android:gravity="center_vertical"
            android:text="请选择"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100px_in720p"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:background="@drawable/refund_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40px_in720p"
            android:gravity="center"
            android:text="申请说明"
            android:textColor="#cccccc" 
            android:textSize="@dimen/_30px_in720p"/>

        <EditText
            android:id="@+id/refund_shuoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30px_in720p"
            android:layout_marginRight="@dimen/_30px_in720p"
            android:gravity="center_vertical"
            android:hint="最多200字"
            android:textColor="#333333"
            android:background="@null"
            android:textSize="@dimen/_25px_in720p" />
    </LinearLayout>

    <TextView
        android:id="@+id/jieshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_30px_in720p"
        android:layout_marginRight="@dimen/_30px_in720p"
        android:layout_marginTop="@dimen/_20px_in720p"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/_15px_in720p"
        android:text="@string/refund_shuoming"
        android:textColor="#999999"
        android:textSize="@dimen/_25px_in720p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center" >

            <TextView
                android:id="@+id/refund_sub"
                android:layout_width="@dimen/_180px_in720p"
                android:layout_height="@dimen/_70px_in720p"
                android:layout_marginBottom="@dimen/_40px_in720p"
                android:layout_marginTop="@dimen/_40px_in720p"
                android:background="@drawable/refund_sub" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>